{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@processes/*": ["processes/*"],
      "@contexts*": ["contexts/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["src/**/*", "src/vite-env.d.ts"],
  "exclude": ["node_modules", "dist"],
}
